<div class="row">
  <div class="col-md-12 content">
    <h3><%=group.title%>
      <%if(!group.leaderEditableOnly){%>
      <span class="newgroup"><a href="/users/<%=userInfo.userName%>/groups/<%=group.groupId%>/newtopic">+ New Topic</a></span>
    <%}%>   
</h3>

      <ul class="nopad">
        <li>
          <%group.topics.forEach(function(topic){%>
           <%- include('usertopic', {userInfo: userInfo, topic: topic}); %>
           <%})%>
         </li>

       </ul>

  </div>
</div>
